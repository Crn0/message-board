<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='stylesheets/reset.css' />
    <link rel='stylesheet' href='stylesheets/theme.css' />
    <link rel='stylesheet' href='stylesheets/index-style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

  </head>
  <body>
    <main class="grid ">
      <header class="flex flex-center border-head pad-2rem gap margin-bot-10per bg-clr-head">
        <p>
          <%= title %>
        </p>
      </header>
      <section class="messages-board grid center-content center-items margin-bot-10per">
        <div class="pos-fixed">
          <a href="/new" rel="noopener noreferrer">
            Message
          </a>
        </div>
        <h2 class="pos-ab">Welcome to <%= title %></h2>
        <div class="message-container flex wrap border-frame pad-10rem gap">
          <% messages.map((message) => { %>
            <div class="message flex wrap flex-one w-250px gap h-auto border-msg pad-2rem pos-rel">
              <p>User: <%= message.user %></p>
              <p>Message: <%= message.text %></p>
              <p>Date: <%=
                          `${
                              message
                              .added
                              .toDateString('en-Us', options)
                            }
                           ${
                              message
                              .added
                              .toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" })
                            }`
              %></p>
            </div>
          <% }) %>
        </div>
      </section>
    </main>

    <footer class="pad-2rem border-footer margin-top-auto flex flex-center">
      <a href="https://github.com/Crn0" class="user" rel="noopener noreferrer" target="_blank"><i class="devicon-github-original"><span>Crno</span></i></a>
    </footer>
  </body>
</html>
